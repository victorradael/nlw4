<style>
  .container {
    width: 800px;
    justify-content: center;
    align-items: center;
    display: flex;
    flex-direction: column;
  }

  .values {
    padding: 10px;
    background: #8257e6;
    color: #fff;
    border-radius: 6px;
    width: 15px;
    text-align: center;
    text-decoration: none;
  }

  .level {
    margin: 10px;
  }

  .level,
  .answers {
    display: flex;
    width: 350px;
    justify-content: space-between;
  }
</style>

<div class="container">
  <label>Hello <strong>{{name}}</strong>! How are you?</label>

  <h3>{{title}}</h3>
  <br>
  <strong>{{description}}</strong>

  <div class="level">
    <span>:(</span>
    <span>:D</span>
  </div>


  <div class="answers">
    <a class="values" href="{{link}}/1?u={{id}}">1</a>
    <a class="values" href="{{link}}/2?u={{id}}">2</a>
    <a class="values" href="{{link}}/3?u={{id}}">3</a>
    <a class="values" href="{{link}}/4?u={{id}}">4</a>
    <a class="values" href="{{link}}/5?u={{id}}">5</a>
    <a class="values" href="{{link}}/6?u={{id}}">6</a>
    <a class="values" href="{{link}}/7?u={{id}}">7</a>
    <a class="values" href="{{link}}/8?u={{id}}">8</a>
    <a class="values" href="{{link}}/9?u={{id}}">9</a>
    <a class="values" href="{{link}}/10?u={{id}}">10</a>

  </div>



  <br>
  <br>


  <strong>Your opinion is very important!</strong>
  <h3><strong>Space</strong> Squad</h3>
</div>